<apex:page sidebar="false" showHeader="false" standardStylesheets="false" controller="IndustrialFellowshipController">
    <html>
    <div ng-controller="WISERDocUpload_Ctrl">

        <head>
            <apex:stylesheet value="{!$Resource.ApplicantPortalCSS}" />
        </head>

        <body>
            <div class="container px-4 mt-5">

                <div class="row mt-3">
                    <div class="col-md-12">
                        <ul class="nav nav-pills nav-fill gap-2 p-1 small bg-white border rounded-5 shadow-sm" id="pillNav2" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('ProjectDetailIF')" class="nav-link rounded-5" id="basic_tab" data-bs-toggle="tab"
                                    type="button" role="tab" aria-selected="true">
                                    <i class="fa-solid fa-circle-check fa-lg text-success me-2" ng-show="showTravellerCheck"></i>
                                    <i class="fa fa-home me-2"></i>Due Diligence and Security/Sensititvity</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('Dashboard_IF')" class="nav-link rounded-5" id="consortia_tab" data-bs-toggle="tab"
                                    type="button" role="tab" aria-selected="false">
                                    <i class="fa-solid fa-circle-check fa-lg text-success me-2" ng-show="showVisaCheck"></i>
                                    <i class="fa-solid fa-people-group i-padding"></i>Bank Details</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('PersonalInformationIF')" class="nav-link rounded-5" id="consortia_tab" data-bs-toggle="tab"
                                    type="button" role="tab" aria-selected="false">
                                    <i class="fa-solid fa-circle-check fa-lg text-success me-2" ng-show="showUndertakingCheck"></i>
                                    <i class="fa-solid fa-people-group i-padding"></i>Undertaking</a>
                            </li>
                            <!-- <li class="nav-item" role="presentation">
                                <a href="#" ng-click="redirectPageURL('EduQualificationIF')" class="nav-link rounded-5" id="finance_tab" data-bs-toggle="tab"
                                    type="button" role="tab" aria-selected="false">
                                    <i class="fa-solid fa-money-bill-trend-up i-padding"></i>Attendance</a>
                            </li> -->
                        </ul>
                    </div>
                </div>

                <div class="modal" id="filePreview">
                    <div class="modal-dialog" style="min-width:120rem">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">
                                    <div class="d-flex" style="background:unset;">
                                        <h3 style="text-align: center">
                                            <b>{{selectedFile.userDocument.Name}}</b>
                                        </h3>
                                    </div>
                                </h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <iframe style="width:100%;height:75vh;border: 0px;border-radius: 10px;" id="file_frame" title="File"></iframe>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5" ng-show="showSecurity">
                    <!-- <div class="row box-shadow-2 mt-5 mx-5 p-3"> -->
                    <div class="row mt-5">
                        <div class="col-md-6">
                            <label class="font-if">{{diligence.userDocument.Name}}
                                <span class="text-danger me-2">*</span>
                            </label>
                            <div class="col-md-9" style="padding-left: 0px !important; padding-right: 0px !important">

                                <div class="input-group input-group-lg mt-4">
                                    <input type="file" accept=".pdf" ng-disabled="visa_stage_disabled" id="{{diligence.userDocument.Name}}" class="form-control "
                                    />
                                    <span class="input-group-btn" ng-hide="visa_stage_disabled">
                                        <button class="btn btn-success" ng-click="uploadFile(diligence.userDocument.Name,diligence.userDocument.Id,'','Create','Check Due Diligence Document')"
                                            type="button">Upload</button>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3 mt-1" ng-show="diligence.ContentDistribution.PreferencesAllowPDFDownload">
                                <!-- <label style="color: #fff;">.</label> -->
                                <a class="blue-btn float-end mt-4 py-3" ng-click="filePreviewHandler(diligence)">View</a>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="font-if">{{sensitivity.userDocument.Name}}
                                <span class="text-danger me-2">*</span>
                            </label>
                            <div class="col-md-9" style="padding-left: 0px !important; padding-right: 0px !important">

                                <div class="input-group input-group-lg mt-4">
                                    <input type="file" accept=".pdf" ng-disabled="visa_stage_disabled" id="{{sensitivity.userDocument.Name}}" class="form-control "
                                    />
                                    <span class="input-group-btn" ng-hide="visa_stage_disabled">
                                        <button class="btn btn-success" ng-click="uploadFile(sensitivity.userDocument.Name,sensitivity.userDocument.Id,'','Create','Check Security/Sensitivity Clearance Document')"
                                            type="button">Upload</button>
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-3 mt-1" ng-show="sensitivity.ContentDistribution.PreferencesAllowPDFDownload">
                                <!-- <label style="color: #fff;">.</label> -->
                                <a class="blue-btn float-end mt-4 py-3" ng-click="filePreviewHandler(sensitivity)">View</a>
                            </div>
                        </div>
                    </div>
                    <!-- </div> -->
                </div>



                <div ng-show="showBankDet">
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>Bank Name
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="txtBankName" ng-focus="removeClass('BankName')" ng-model="bankDetails.Bank_Name__c" class="form-control"
                            />
                            <span class="text-danger" id="spnBankName">Please enter the bank name</span>
                        </div>
                        <div class="col-md-4">
                            <label>Account No.
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="txtAccNo" ng-focus="removeClass('AccNo')" ng-model="bankDetails.Bank_Account_Number__c" class="form-control"
                            />
                            <span class="text-danger" id="spnAccNo">Please enter the bank account no.</span>
                        </div>
                        <div class="col-md-4">
                            <label>IFSC
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="txtIFSC" ng-focus="removeClass('IFSC')" ng-model="bankDetails.Bank_IFSC_Code__c" class="form-control"
                            />
                            <span class="text-danger" id="spnIFSC">Please enter the bank IFSC</span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <label>SWIFT Code
                                <span class="text-danger">*</span>
                            </label>
                            <input type="text" id="txtSWIFTCode" ng-focus="removeClass('SWIFTCode')" ng-model="bankDetails.Bank_SWIFT_Code__c" class="form-control"
                            />
                            <span class="text-danger" id="spnSWIFTCode">Please enter the bank SWIFT Code</span>
                        </div>
                        <div class="col-md-4">
                            <label>Branch</label>
                            <input type="text" ng-model="bankDetails.Bank_Branch_Name__c" class="form-control" />
                        </div>

                    </div>
                    <div class="row my-3">
                        <div class="col-md-8">
                            <label>Bank Address</label>
                            <input type="text" ng-model="bankDetails.Bank_Address__c" class="form-control" />
                        </div>
                        <div class="col-md-4 pt-3">
                            <button type="button" class="blue-btn mt-4" ng-click="saveBankDetails()">Submit</button>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-5 mt-3">
                            <label>Upload Bank Details</label>
                            <div class="input-group input-group-lg">
                                <input type="file" accept=".pdf" ng-disabled="travell_form_disabled" id="{{BankDetUpload.userDocument.Name}}" class="form-control "
                                />
                                <span class="input-group-btn" ng-hide="travell_form_disabled">
                                    <button class="btn btn-success" ng-click="uploadFile(BankDetUpload.userDocument.Name,BankDetUpload.userDocument.Id,'','Create','Check Bank Details')"
                                        type="button">Upload</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3 mt-1" ng-show="BankDetUpload.ContentDistribution.PreferencesAllowPDFDownload">
                            <a class="blue-btn float-end mt-4 py-3" ng-click="filePreviewHandler(BankDetUpload)">View</a>
                        </div>
                    </div>
                </div>
                <div ng-show="showUnderTaking">
                    <div class="row mt-5">
                        <!-- <div class="row box-shadow-2 mt-5 mx-5 p-3"> -->
                        <div class="row mt-5">
                            <div class="col-md-6">
                                <div>
                                <label>{{Undertaking.userDocument.Name}}
                                    <span class="text-danger me-2">*</span>
                                </label>
                            </div>
                                <div class="col-md-9" style="padding-left: 0px !important; padding-right: 0px !important">

                                    <div class="input-group input-group-lg mt-4">
                                        <input type="file" accept=".pdf" ng-disabled="visa_stage_disabled" id="{{Undertaking.userDocument.Name}}" class="form-control "/>
                                        <span class="input-group-btn" ng-hide="visa_stage_disabled">
                                            <button class="btn btn-success" ng-click="uploadFile(Undertaking.userDocument.Name,Undertaking.userDocument.Id,'','Create','Review Undertaking')"
                                                type="button">Upload</button>
                                        </span>
                                    </div>
                                </div>

                                <div class="col-md-3 mt-1 pt-4" ng-show="Undertaking.ContentDistribution.PreferencesAllowPDFDownload">
                                    <!-- <label style="color: #fff;">.</label> -->
                                    <a class="blue-btn float-end py-3" ng-click="filePreviewHandler(Undertaking)">View</a>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-md-6">
                                <label>{{endorsement.userDocument.Name}}
                                    <span class="text-danger me-2">*</span>
                                </label>
                                <div class="col-md-9" style="padding-left: 0px !important; padding-right: 0px !important">
                                    <div class="input-group input-group-lg mt-4">
                                        <input type="file" accept=".pdf" ng-disabled="visa_stage_disabled" id="{{endorsement.userDocument.Name}}" class="form-control "/>
                                        <span class="input-group-btn" ng-hide="visa_stage_disabled">
                                            <button class="btn btn-success" ng-click="uploadFile(endorsement.userDocument.Name,endorsement.userDocument.Id,'','Create','Check Endorsement Letter')" type="button">Upload</button>
                                        </span>
                                    </div>
                                </div>

                                <div class="col-md-3 mt-1 pt-4" ng-show="endorsement.ContentDistribution.PreferencesAllowPDFDownload">
                                    <!-- <label style="color: #fff;">.</label> -->
                                    <a class="blue-btn float-end py-3" ng-click="filePreviewHandler(endorsement)">View</a>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

        </body>
    </div>

    </html>
</apex:page>