                                    <input ng-focus="removeClass2('venue')" id="venue" name="proposedvenue" placeholder="proposedvenue" class="form-control" type="text" ng-model="applicantDetails.Proposed_Venue__c" ng-disabled="proposalStage" /><br/>
                                </div><br/>
                            <!-- </div> -->
