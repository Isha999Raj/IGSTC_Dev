<apex:page sidebar="false" showHeader="false" standardStylesheets="false" controller="ReviewLogInFormController">
     <html>

     <head>
          <c:Libraries ></c:Libraries>
          <apex:stylesheet value="{!$Resource.ApplicantPortalCSS}" />
          <style>
               body {
                    background: #F5F5F5;
               }

               .btn-login {
                    font-size: 0.9rem;
                    letter-spacing: 0.05rem;
                    padding: 0.75rem 1rem;
               }

               .loadingBackground {
                    position: fixed;
                    height: 100%;
                    width: 100%;
                    background: #F6F6F6;
                    z-index: 11111;
                    opacity: 0.7;
                    top: 0px;
                    left: 0;
                    bottom: 0;
                    right: 0;
               }

               .loading {
                    top: 50%;
                    left: 50%;
                    margin: -50px 0px 0px -50px;
                    z-index: 111111;
                    position: fixed;
               }
          </style>
          <script>
               var siteUrl = "{!$Label.ApplicantPortalSiteURL}";
               var isRegistration = '{!$CurrentPage.parameters.register}';

               debugger;
               var app = angular.module('myApp', []);
               app.controller('myController', function ($scope) {
                    $scope.showSpinner = false;
                    $scope.contactDetails = { Name: "", Email__c: "" };
                    if (isRegistration == "true") {
                         $scope.registrationPage = true;
                    } else {
                         $scope.registrationPage = false;
                    }

                    debugger;
                    $scope.loginReviewer = function () {
                         $scope.userName;
                         $scope.userPassword;
                         $scope.showSpinner = true;

                         debugger;
                         ReviewLogInFormController.loginReviewer($scope.userName, $scope.userPassword, function (result, event) {
                              if (event.status && result != null) {

                                   debugger;
                                   Swal.fire(
                                        '', 'Logged In Successfully', 'Success'
                                   )
                                   $scope.$apply();



                                   debugger;
                                   window.location.replace(siteUrl + "ReviewerPortal?id=" + result + '#/Home');


                              } else {
                                   Swal.fire({
                                        icon: 'error',
                                        title: 'Opps....!',
                                        text: 'Please Enter the Correct Username & Password !'
                                   })
                              }
                         }, { escape: false })
                         $scope.showSpinner = false;
                         $scope.$apply();
                    }


                    $scope.resetpass = function () {
                         $scope.userPassword;
                         var hashId = '{!$CurrentPage.parameters.id}';
                         ReviewLogInFormController.ResetPassword($scope.userPassword, hashId, function (result, event) {
                              if (event.status && result != null) {
                                   debugger;
                                   Swal.fire(
                                        'success', 'Password Changed Successfully', 'Success'
                                   )
                                   $scope.$apply();


                                   debugger;
                                   window.location.replace(siteUrl + "ReviewLoginForm#");
                              }
                         }, { escape: false })
                    }



               });
          </script>
     </head>

     <body ng-app="myApp" ng-controller="myController">

          <div class="container px-4 mx-5" ng-hide="loginPage">
               <div class="card h-50" style="width: 100%; margin: 5%;">
                    <div class="row"></div>
                    <div class="row">
                         <div class="col-md-3">
                              <!-- <img src="/resource/1657797264000/LoginSignUp" width="100%" class="logo" /> -->
                              <apex:image url="{!$Resource.LoginSignUp}" width="100%" styleClass="logo"/>                              
                         </div>
                         <div class="col-md-7 offset-2">
                              <div class="row" style="margin-top: 10%;">
                                   <div class="col-md-12">
                                   <h2 style="margin-bottom:-10pt;">
                                        <apex:image url="{!$Resource.Logo}" alt="IGSTC" styleClass="brand-logo"/>
                                        <!-- <br/>
                                        <b style="text-align:center;color:rgb(33, 152, 226)">NEW PASSWORD</b> -->
                                   </h2>
                              </div>
                              </div>
                              <div class="row pt-5">

                                   <div class="col-md-6" style="margin-top: 2%;">
                                        <label for="floatingPassword" style="text: 2px solid LightBlue;margin: 0px 0px 8px;">Password</label>
                                        <input class="form-control ng-pristine ng-untouched ng-valid ng-empty w-100" ng-model="userPassword" placeholder="Enter new password" style="border: 2px solid LightBlue;"
                                             type="password" />
                                   </div>
                              </div>
                              <div class="row pt-3">

                                   <div class="col-md-6" style="margin-top: 2%;">
                                        <button class="blue-btn w-100 fw-bold text-uppercase" ng-click="resetpass()" type="submit">Reset</button>
                                   </div>
                                   <div class="col-md-5"></div>

                              </div>
                         </div>
                    </div>
               </div>
          </div>

     </body>

     </html>
</apex:page>